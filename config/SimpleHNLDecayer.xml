<?xml version="1.0" encoding="ISO-8859-1"?>

<alg_conf>

  <!--
      Configuration sets for the SimpleHNLDecayer
      
      Configurable Parameters:
      ..........................................................................................
      Name                    Type          Optional     Comment                       Default

      weight-flux-input       bool          yes          Use weighted fluxFiles        false

      majorana-hnl            bool          yes          true = Maj, false = Dirac     false

      isotropic-polarisation  bool          yes          Drop angular dep of products  false

      exclusive-decays        bool          yes          Use exclusive decay alg       false

      hnl-mass                double        no           HNL mass                      245.229 MeV

      hnl-e-coupling          double        yes          |U_e4|^2                      0.0

      hnl-mu-coupling         double        yes          |U_mu4|^2                     1.0

      hnl-tau-coupling        double        yes          |U_tau4|^2                    0.0
      ..........................................................................................
  -->

  <param_set name="Default">

    <param type="double" name="hnl-mass">           genie::HNL::defaults/HNLDefaultMass     </param>
    <param type="double" name="hnl-e-coupling">     genie::HNL::defaults/HNLDefaultECoup    </param>
    <param type="double" name="hnl-mu-coupling">    genie::HNL::defaults/HNLDefaultMuCoup   </param>
    <param type="double" name="hnl-tau-coupling">   genie::HNL::defaults/HNLDefaultTauCoup  </param>
    
  </param_set>

  <param_set name="MuonOnly">

    <param type="double" name="hnl-mass">           245.229 * genie::units/MeV   </param>
    <param type="double" name="hnl-e-coupling">     0.0                          </param>
    <param type="double" name="hnl-mu-coupling">    1.0                          </param>
    <param type="double" name="hnl-tau-coupling">   0.0                          </param>

  </param_set>

  <param_set name="ElectronOnly">

    <param type="double" name="hnl-mass">           245.229 * genie::units/MeV   </param>
    <param type="double" name="hnl-e-coupling">     1.0                          </param>
    <param type="double" name="hnl-mu-coupling">    0.0                          </param>
    <param type="double" name="hnl-tau-coupling">   0.0                          </param>
    
  </param_set>

  <param_set name="EqualLeptons">

    <param type="double" name="hnl-mass">           245.229 * genie::units/MeV   </param>
    <param type="double" name="hnl-e-coupling">     1.0                          </param>
    <param type="double" name="hnl-mu-coupling">    1.0                          </param>
    <param type="double" name="hnl-tau-coupling">   0.0                          </param>
    
  </param_set>

</alg_conf>
